{{!< default}}

{{> header}}

<!-- HERO -->
<section class="hero">
  <div class="hero-left">
    <div class="hl-season">
      <span class="hl-season-dot"></span>
      <span>SEASON 01 · 2026</span>
    </div>

    <div class="hero-exhibition-title">
      <span class="het-oversize het-cn">小梦岛</span>
      <span class="het-subtitle">XIAO MENG DAO</span>
      <div class="het-line"></div>
    </div>

    <p class="hero-tagline">文学数字艺术的在线展览 · FREE &amp; LONG-TERM EXHIBITION</p>
    <p class="hero-desc">{{@site.description}}</p>

    <div class="hero-stats">
      <div class="hs">
        <span class="hs-n acid">{{@site.posts_count}}</span>
        <span class="hs-l">WORKS</span>
      </div>
      <div class="hs">
        <span class="hs-n">{{@site.tags_count}}</span>
        <span class="hs-l">ROOMS</span>
      </div>
    </div>
  </div>

  <div class="hero-right">
    {{#foreach posts limit="1"}}
      <div class="featured-exhibit">
        <div class="fe-bg">
          {{#if feature_image}}
          <img src="{{feature_image}}" alt="{{title}}" style="width:100%;height:100%;object-fit:cover;opacity:.4;">
          {{else}}
          <div class="fe-bg-type">{{title}}</div>
          {{/if}}
          <div class="fe-bg-accent"></div>
        </div>
        <div class="fe-overlay"></div>
        <span class="fe-corner-tag">{{#if featured}}FEATURED{{else}}LATEST{{/if}}</span>
        <div class="fe-num">NO.001</div>
        <div class="fe-placard">
          <div class="fep-kicker">{{#if primary_tag}}{{primary_tag.name}}{{else}}EXHIBIT{{/if}}</div>
          <h2 class="fep-title"><a href="{{url}}">{{title}}</a></h2>
          <div class="fep-meta">{{date format="YYYY.MM.DD"}}</div>
        </div>
      </div>
    {{/foreach}}

    <div class="fe-rooms">
      {{#get "tags" limit="4"}}
        {{#foreach tags}}
        <a class="fer" href="{{url}}">
          <div class="fer-dot" style="background:var(--acid)"></div>
          <div class="fer-name">{{name}}</div>
          <div class="fer-count" style="color:var(--text3)">{{count.posts}}</div>
        </a>
        {{/foreach}}
      {{/get}}
    </div>
  </div>
</section>

<!-- GALLERY + SIDEBAR -->
<div class="gallery-section">
  <div class="gallery-grid">
    <div class="gg-header">
      <span class="gg-h-label">GALLERY — ALL WORKS</span>
      <div class="gg-h-filter">
        <span class="gg-f on">ALL</span>
        {{#get "tags" limit="3"}}
          {{#foreach tags}}
          <span class="gg-f">{{name}}</span>
          {{/foreach}}
        {{/get}}
      </div>
    </div>

    {{!-- Main Exhibit: featured post first, fallback to latest --}}
    {{#get "posts" filter="featured:true" limit="1"}}
      {{#foreach posts}}
        {{> "card-main-exhibit"}}
      {{/foreach}}
      {{else}}
      {{#foreach ../posts limit="1"}}
        {{> "card-main-exhibit"}}
      {{/foreach}}
    {{/get}}

    {{!-- Regular Exhibits: 2-column grid --}}
    <div class="exhibit-grid">
    {{#foreach posts}}
      {{#unless @first}}
        {{> "card-exhibit"}}
      {{/unless}}
    {{/foreach}}
    </div>

    <div class="pager">
      {{#prev_url}}<a class="pg-prev" href="{{prev_url}}">← PREV</a>{{/prev_url}}
      {{^prev_url}}<span class="pg-prev" style="opacity:.3">← PREV</span>{{/prev_url}}
      {{#next_url}}<a class="pg-next" href="{{next_url}}">NEXT →</a>{{/next_url}}
      {{^next_url}}<span class="pg-next" style="opacity:.3">NEXT →</span>{{/next_url}}
    </div>
  </div>

  <aside class="sidebar-panel">
    <!-- 策展人 -->
    <div class="sp-block">
      <div class="spb-label">CURATOR</div>
      <div class="sp-avatar">R</div>
      <div class="sp-name">ROYIANS</div>
      <div class="sp-role">策展人 · Curator</div>
      <p class="sp-bio">{{@site.description}}</p>
    </div>

    <!-- 展览室 -->
    <div class="sp-block">
      <div class="spb-label">ROOMS</div>
      <div class="sp-rooms">
        {{#get "tags" limit="8"}}
          {{#foreach tags}}
          <a class="spr-item" href="{{url}}">
            <div class="spr-swatch" style="background:var(--dark2);color:var(--acid)">{{name.[0]}}</div>
            <div class="spr-info">
              <div class="spr-name">{{name}}</div>
              <div class="spr-sub">{{count.posts}} works</div>
            </div>
            <div class="spr-n" style="color:var(--text3)">{{count.posts}}</div>
          </a>
          {{/foreach}}
        {{/get}}
      </div>
    </div>

    <!-- 联系 -->
    <div class="sp-block">
      <div class="spb-label">CONTACT</div>
      <div class="sp-inst">
        <a class="spi-item" href="mailto:royians@vidorra.life">
          <div>
            <div class="spi-name">Email</div>
            <div class="spi-desc">royians@vidorra.life</div>
          </div>
          <div class="spi-dot live"></div>
        </a>
      </div>
    </div>
  </aside>
</div>

{{> footer}}
