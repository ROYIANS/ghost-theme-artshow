{{!< default}}

{{#tag}}
{{> header}}
<div class="tag-page">
  <div class="tag-header">
    <div class="tag-label">ROOM</div>
    <h1 class="tag-title">{{name}}</h1>
    {{#if description}}<p class="tag-desc">{{description}}</p>{{/if}}
    <div class="tag-count">{{count.posts}} works</div>
  </div>
  <div class="tag-posts">
    {{#foreach posts}}
      {{> "card-row"}}
    {{/foreach}}
  </div>
  <div class="pager">
    {{#prev_url}}<a class="pg-prev" href="{{prev_url}}">← PREV</a>{{/prev_url}}
    {{^prev_url}}<span class="pg-prev" style="opacity:.3">← PREV</span>{{/prev_url}}
    {{#next_url}}<a class="pg-next" href="{{next_url}}">NEXT →</a>{{/next_url}}
    {{^next_url}}<span class="pg-next" style="opacity:.3">NEXT →</span>{{/next_url}}
  </div>
</div>
{{> footer}}
{{/tag}}
