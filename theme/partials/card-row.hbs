<div class="aw-row">
  <div class="ar-thumb">
    <span class="ar-thumb-text" style="color:var(--text3)">{{date format="DD"}}</span>
  </div>
  <div class="ar-body">
    <div style="flex:1">
      <div class="ar-kicker">{{#if primary_tag}}{{primary_tag.name}}{{else}}未分类{{/if}}</div>
      <div class="ar-title"><a href="{{url}}">{{title}}</a></div>
      <div class="ar-meta">{{date format="YYYY.MM.DD"}}</div>
    </div>
    <span class="ar-enter">→</span>
  </div>
</div>
